<%= form_for(@task) do |f| %>
    <%= render 'tasks/error_messages_task' %>
  <div class="form-group">
    <%= f.text_field :content, class: "form-control", placeholder: "Enter task content..." %>
  </div>

  <div class="actions pull-right">
    <%= link_to 'Close', root_path , class: "btn btn-default" %>
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
