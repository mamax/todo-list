<%= form_for(@project) do |f| %>
    <%= render 'projects/error_messages_project'  %>

      <%= f.text_area :name, placeholder: "Enter project name..." %>

    <div class="actions pull-right">
      <%= link_to 'Close', root_path, class: "btn btn-default" %>
      <%= f.submit "Save project", class: "btn btn-primary" %>
    </div>
<% end %>